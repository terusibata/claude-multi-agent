# AIエージェントバックエンド 環境変数設定例

# ============================================
# データベース設定
# ============================================
DB_USER=aiagent
DB_PASSWORD=aiagent_password
DB_NAME=aiagent_db
DB_PORT=5432
DATABASE_URL=postgresql+asyncpg://aiagent:aiagent_password@localhost:5432/aiagent_db

# ============================================
# AWS Bedrock設定
# ============================================
# Bedrockを使用する場合は必ず1に設定
CLAUDE_CODE_USE_BEDROCK=1

# AWSリージョン
AWS_REGION=us-west-2

# 開発環境: AWS認証情報（本番環境ではIAMロールを使用）
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
# AWS_SESSION_TOKEN=your_session_token  # 一時認証情報使用時

# モデル設定（オプション）
ANTHROPIC_MODEL=us.anthropic.claude-sonnet-4-5-20250929-v1:0
ANTHROPIC_SMALL_FAST_MODEL=us.anthropic.claude-haiku-4-5-20251001-v1:0

# ============================================
# アプリケーション設定
# ============================================
APP_ENV=development
APP_PORT=8000
LOG_LEVEL=INFO

# Skills保存ベースパス
SKILLS_BASE_PATH=/skills

# ============================================
# セキュリティ設定
# ============================================
# CORS許可オリジン（カンマ区切り）
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# APIレート制限
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
